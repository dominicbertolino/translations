<%= form_for book, html: {class: 'form-horizontal'} do |f| %>

    <% if book.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-warning" role="alert">Invalid entries:</div>
          <ul>
            <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, class: 'control-label col-md-2 col-sm-1' %>
      <div class="col-md-8 col-sm-10">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Image', class: 'control-label col-md-2 col-sm-1' %>
      <div class="col-md-8 col-sm-10">
        <%= f.text_field :cover_image_url, class: 'form-control', placeholder: 'Enter image url' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :author, class: 'control-label col-md-2 col-sm-1' %>
      <div class="col-md-8 col-sm-10">
        <%= f.text_field :author, class: 'form-control', placeholder: 'Enter author' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :slug, class: 'control-label col-md-2 col-sm-1' %>
      <div class="col-md-8 col-sm-10">
        <%= f.text_field :slug, class: 'form-control', placeholder: 'Enter slug' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-3 col-md-offset-2 col-xs-8 col-xs-offset-2">
        <%= f.submit class: 'btn btn-primary form-control' %>
      </div>
    </div>

<% end %>
