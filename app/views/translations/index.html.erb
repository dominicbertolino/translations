<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <h4>Translations</h4>
  <div class="row">
    <div class="col-md-12">

        <table class="table table-bordered">
          <thead>
          <tr>
            <th></th>
            <th>Cover</th>
            <th>Book</th>
            <th>Language</th>
            <th>Translated Title</th>
            <th>Publisher</th>
            <th>Translator</th>
            <th>ISBN-13</th>
            <th>ISBN-10</th>
          </tr>
          </thead>

          <tbody>
          <% @translations.each do |translation| %>
              <tr class="translation">
              <tr>
                <td>
                  <%= link_to edit_translation_path(translation) do %>
                      <span class="glyphicon glyphicon-pencil"></span>
                  <% end %>
                  &nbsp;
                  <%= link_to translation, method: :delete, data: {confirm: 'Are you sure?'} do %>
                      <span class="glyphicon glyphicon-remove"></span>
                  <% end %>
                </td>
                <td><%= image_tag(translation.cover_image_url, size: '45x75') %></td>
                <td><%= translation.book.title %></td>
                <td><%= translation.language.name %></td>
                <td><%= translation.title %></td>
                <td><%= translation.publisher %></td>
                <td><%= translation.translator %></td>
                <td><%= translation.isbn_13 %></td>
                <td><%= translation.isbn_10 %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'New Translation', new_translation_path, class: 'btn btn-info', role: 'button' %>
    </div>
  </div>
</div>


